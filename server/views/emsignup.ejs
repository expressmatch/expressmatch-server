<!doctype html>
<html>
<head>
    <title>Express Match - Express and find your partner</title>
    <style>

    </style>
</head>
<body>
<div class="container">
    <header>
        <% include partial/header.ejs %>
    </header>
    <article>
        <div class="login-container">
            <div class="login-header">
                <div class="main-title">Sign Up</div>
                <div class="sub-title">
                    <span class="login-text">Already a member? </span>
                    <span class="login-link">
                            <a href="/login">Log In</a>
                        </span>
                </div>
            </div>
            <div class="login-content-local">
                <form action="/signup" method="post">
                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                    <div class="form-error"><%= message %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="email">
                            Email address:
                        </label>
                        <div class="form-control">
                            <input type="text" name="email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">
                            Password:
                        </label>
                        <div class="form-control">
                            <input type="password" name="password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control">Submit</button>
                    </div>
                </form>
            </div>
            <div class="login-content-social">
                <a href="/auth/facebook" class="">
                    <span class="">Log in with</span> Facebook
                </a>
            </div>
        </div>
    </article>
    <footer>
        <% include partial/footer.ejs %>
    </footer>
</div>
</body>
</html>