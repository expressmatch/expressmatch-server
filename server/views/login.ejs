<!doctype html>
<html>
<head>
    <title>Express To Match - Express and find your partner</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="/public/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <% include partial/header.ejs %>
        <article class="login">
            <div class="login-container">
                <div class="header">
                    <div class="main-title">Log In <i class="fas fa-lock"></i> </div>
                    <div class="sub-title">
                        <span class="signup-text">Not registered with our site yet?</span>
                        <span class="signup-link">
                            <a href="/signup">Sign Up</a>
                        </span>
                    </div>
                </div>
                <div class="content-local">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="email">
                                Email address:
                            </label>
                            <div class="em-form-control">
                                <input type="email" name="email" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password:
                            </label>
                            <div class="em-form-control">
                                <a href="/forgot">Forgot your Password?</a>
                            </div>
                            <div class="em-form-control">
                                <input type="password" name="password" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="keepMeSignedIn">
                                <input type="checkbox" id="keepMeSignedIn" name="keepMeSignedIn" checked/> Keep me signed in
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="em-form-control">Log In</button>
                        </div>
                        <!-- show any messages that come back with authentication -->
                        <% if (error.length > 0) { %>
                        <div class="form-error"><%= error %></div>
                        <% } %>
                    </form>
                </div>
                <div class="content-social">
                    <a href="/auth/facebook" class="facebook-button">
                        <span class="btn-fb-login">Log in with Facebook</span>
                    </a>
                </div>
            </div>
        </article>

        <% include partial/footer.ejs %>

    </div>
</body>
</html>