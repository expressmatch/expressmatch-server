<!doctype html>
<html>
<head>
    <title>Express Match - Express and find your partner</title>
    <link href="/public/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="container">
    <% include partial/header.ejs %>
    <article class="reset-password">
        <div class="reset-password-container">
            <div class="header">
                <div class="main-title">Reset your password</div>
            </div>
            <div class="content">
                <form action="/reset/<%= token %>" method="post">
                    <div class="form-group">
                        <label for="password">
                            Enter new password:
                        </label>
                        <div class="em-form-control">
                            <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirm">
                            Re-enter new password:
                        </label>
                        <div class="em-form-control">
                            <input type="password" name="confirm" value="" placeholder="Confirm password" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="em-form-control">Update Password</button>
                    </div>
                    <!-- show any messages that come back with authentication -->
                    <% if (success) { %>
                    <div class="form-success"><%= success %></div>
                    <% } %>
                    <% if (error) { %>
                    <div class="form-error"><%= error %></div>
                    <% } %>
                </form>
            </div>
        </div>
    </article>

    <% include partial/footer.ejs %>

</div>
</body>
</html>