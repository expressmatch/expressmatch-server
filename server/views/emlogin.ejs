<!doctype html>
<html>
<head>
    <title>Express Match - Express and find your partner</title>
    <style>

    </style>
</head>
<body>
    <div class="container">
        <header>
            <% include partial/header.ejs %>
        </header>
        <article>
            <div class="login-container">
                <div class="login-header">
                    <div class="main-title">Log In</div>
                    <div class="sub-title">
                        <span class="signup-text">Not registered with our site yet?</span>
                        <span class="signup-link">
                            <a href="/signup">Sign Up</a>
                        </span>
                    </div>
                </div>
                <div class="login-content-local">
                    <form action="/login" method="post">
                        <!-- show any messages that come back with authentication -->
                        <% if (message.length > 0) { %>
                            <div class="form-error"><%= message %></div>
                        <% } %>
                        <div class="form-group">
                            <label for="email">
                                Email address:
                            </label>
                            <div class="em-form-control">
                                <input type="text" name="email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password:
                            </label>
                            <div class="em-form-control">
                                <a href="#">Forgot Password?</a>
                            </div>
                            <div class="em-form-control">
                                <input type="password" name="password" />
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="em-form-control">Login</button>
                        </div>
                    </form>
                </div>
                <div class="login-content-social">
                    <a href="/auth/facebook" class="">
                        <span class="">Log in with</span> Facebook
                    </a>
                </div>
            </div>
        </article>
        <footer>
            <% include partial/footer.ejs %>
        </footer>
    </div>
</body>
</html>