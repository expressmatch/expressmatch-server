<!doctype html>
<html>
<head>
    <title>Express Match - Express and find your partner</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="/public/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <% include partial/header.ejs %>
        <article class="login">
            <div class="login-container">
                <div class="header">
                    <div class="main-title">Log In<i class="fas fa-lock"></i></div>
                    <div class="sub-title">
                        <span class="signup-text">Not registered with our site yet?</span>
                        <span class="signup-link">
                            <a href="/signup">Sign Up</a>
                        </span>
                    </div>
                </div>
                <div class="content-local">
                    <form action="/login" method="post">
                        <!-- show any messages that come back with authentication -->
                        <% if (message.length > 0) { %>
                            <div class="form-error"><%= message %></div>
                        <% } %>
                        <div class="form-group">
                            <label for="email">
                                Email address:
                            </label>
                            <div class="em-form-control">
                                <input type="text" name="email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password:
                            </label>
                            <div class="em-form-control">
                                <a href="#">Forgot your Password?</a>
                            </div>
                            <div class="em-form-control">
                                <input type="password" name="password" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" /><label>Keep me signed in</label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="em-form-control">Login</button>
                        </div>
                    </form>
                </div>
                <div class="content-social">
                    <a href="/auth/facebook" class="">
                        <span class="">Log in with</span> Facebook
                    </a>
                </div>
            </div>
        </article>

        <% include partial/footer.ejs %>

    </div>
</body>
</html>