<!doctype html>
<html>
<head>
    <title>Express Match - Express and find your partner</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="/public/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="container">
    <% include partial/header.ejs %>
    <article class="forgot-password">
        <div class="forgot-password-container">
            <div class="header">
                <div class="main-title">Forgot your password?</div>
                <div class="sub-title">
                    <span class="login-text">Reset password using your e-mail </span>
                </div>
            </div>
            <div class="content">
                <form action="/forgot" method="post">
                    <div class="form-group">
                        <label for="email">
                            Enter e-mail:
                        </label>
                        <div class="em-form-control">
                            <input type="email" name="email" required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="em-form-control">Reset Password</button>
                    </div>
                    <!-- show any messages that come back with authentication -->
                    <% if (success) { %>
                    <div class="form-success"><%= success %></div>
                    <% } %>
                    <% if (error) { %>
                    <div class="form-error"><%= error %></div>
                    <% } %>
                </form>
            </div>
        </div>
    </article>

    <% include partial/footer.ejs %>

</div>
</body>
</html>